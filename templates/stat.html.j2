{% extends 'base.html.j2' %} 
{% import 'macros.html.j2' as mak%}

{% block head %}
<title>Youth For Europe</title>
<link rel="stylesheet" href="{{ url_for('static', filename='css/stat.css') }}">
{% endblock %} 
{% block body %}
{{mak.nav()}}


<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-md-5 p-1">
      <div class="card px-1 px-sm-4 py-3 mt-3" style="border-radius: 20px;">
        <h1 class="text-center">{{ entry.title }}</h1>
        <p class="text-center text-muted">Published on: {{ entry.date_created.strftime('%Y-%m-%d') }}</p>
        <div class="body-text text-left main-text">{{ entry.content | safe }}</div>
      </div>
    </div>
  </div>
</div>
{% endblock %}

